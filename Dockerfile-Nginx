# Use the official Nginx base image
FROM nginx:latest

# Create a directory to store SSL certificates
RUN mkdir -p /etc/letsencrypt/live/unitedsportshub.com

# Copy SSL certificates from the local machine to the container
COPY /etc/letsencrypt/live/unitedsportshub.com/fullchain.pem /etc/letsencrypt/live/unitedsportshub.com/fullchain.pem
COPY /etc/letsencrypt/live/unitedsportshub.com/privkey.pem /etc/letsencrypt/live/unitedsportshub.com/privkey.pem

# Copy your Nginx configuration file
COPY ./nginx/nginx.conf /etc/nginx/nginx.conf

# Expose ports
EXPOSE 80
EXPOSE 443

# Start Nginx
CMD ["nginx", "-g", "daemon off;"]